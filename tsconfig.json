{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./build"
    },
    "compileOnSave": true,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": true
    },
    "filesGlob": [
        "src/**/*.ts",
        "typings/**/*.d.ts",
        "typings/index.d.ts",
        "!node_modules/**"
    ],
    "files": [
        "src/main.ts",
        "src/states/Boolean.ts",
        "src/states/Choice.ts",
        "src/states/List.ts",
        "src/states/Number.ts",
        "src/states/String.ts",
        "typings/globals/mocha/index.d.ts",
        "typings/index.d.ts",
        "typings/modules/chai/index.d.ts"
    ]
}
